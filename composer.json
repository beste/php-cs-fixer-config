{
    "name": "beste/php-cs-fixer-config",
    "description": "PHP CS Fixer Config used in BESTE projects",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jérôme Gamez",
            "email": "jerome@gamez.name"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0"
    },
    "suggest": {
        "friendsofphp/php-cs-fixer": "~3.18.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~3.18.0"
    },
    "autoload": {
        "psr-4": {
            "Beste\\PhpCsFixer\\Config\\": "src"
        }
    },
    "scripts": {
        "cs": "vendor/bin/php-cs-fixer fix --diff --verbose"
    }
}
